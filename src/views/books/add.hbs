<div class="columns is-mobile">
    <div class="column is-5 is-offset-3">
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">
                    Add Books
                </p>
            </header>
            <div class="card-content">
               
               <form action="/books/add" method="POST">

                <div class="field">
                   <div class="control">
                       <input type="text" name="title" class="input is-primary" placeholder="Name book">
                   </div>
               </div>
               <div class="field">
                   <div class="control">
                       <input type="text" name="author" class="input is-primary" placeholder="Title">
                   </div>
                </div>
                <div class="field">
                   <div class="control">
                       <input type="text" name="isbn" placeholder="ISBN" class="input is-primary" pattern="(?:(?=.{17}$)97[89][ -](?:[0-9]+[ -]){2}[0-9]+[ -][0-9]|97[89][0-9]{10}|(?=.{13}$)(?:[0-9]+[ -]){2}[0-9]+[ -][0-9Xx]|[0-9]{9}[0-9Xx])">
                   </div>
                </div>
                <footer class="card-footer">
                    <button class="button btn-block is-primary">Save</button>
                </footer>
               </form>
               </div>
            
        </div>
    </div>
</div>